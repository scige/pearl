%h2.page-header 用户登录

= form_for resource, :as=>resource_name, :url=>session_path(resource_name), :html=>{:class=>"form-horizontal"} do |f|
  .form-group
    = f.label :email, "邮箱", :class=>"col-md-2 control-label"
    .col-md-3
      = f.email_field :email, autofocus: true, :class=>"form-control"

  .form-group
    = f.label :password, "密码", :class=>"col-md-2 control-label"
    .col-md-3
      = f.password_field :password, autocomplete: "off", :class=>"form-control"

  - if devise_mapping.rememberable?
    .form-group
      .col-md-3.col-md-offset-2
        .checkbox
          %label
            = f.check_box :remember_me
            自动登录

  .form-group
    .col-md-4.col-md-offset-2
      = f.submit "登录", :class=>"btn btn-default"
      = "&nbsp;or&nbsp;".html_safe
      = link_to "注册", new_user_registration_path, :class=>"btn btn-default"

/= render "users/shared/links"

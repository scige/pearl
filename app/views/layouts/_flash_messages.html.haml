- if flash and flash.any?
  - flash.each do |key, value|
    - if :success == key
      .alert.alert-success.alert-dismissable
        %button{:type=>"button", :class=>"close", "data-dismiss"=>"alert", "aria-hidden"=>"true"}= "&times;".html_safe
        = value
    - elsif :error == key
      .alert.alert-danger.alert-dismissable
        %button{:type=>"button", :class=>"close", "data-dismiss"=>"alert", "aria-hidden"=>"true"}= "&times;".html_safe
        = value
    - else
      .alert.alert-info.alert-dismissable
        %button{:type=>"button", :class=>"close", "data-dismiss"=>"alert", "aria-hidden"=>"true"}= "&times;".html_safe
        = value


= render "sub_navbar"

= form_for @object, :html=>{:class=>"form-horizontal"} do |f|
  .form-group
    = f.label "题目: ", :class=>"col-md-2 control-label"
    .col-md-3
      %p.form-control-static= @object.title

  .form-group
    = f.label "作者: ", :class=>"col-md-2 control-label"
    .col-md-3
      %p.form-control-static= @object.user ? @object.user.name : nil

  .form-group
    = f.label "期刊: ", :class=>"col-md-2 control-label"
    .col-md-3
      %p.form-control-static= @object.magazine

  .form-group
    = f.label "状态: ", :class=>"col-md-2 control-label"
    .col-md-3
      = f.select :status, generate_all_paper_status, {:selected=>@object.status}, {:disabled=>"disabled", :class=>"form-control"}

  .form-group
    .col-md-3.col-md-offset-2
      = link_to '编辑', edit_paper_path(@object), :class=>"btn btn-primary"
      = link_to '删除', @object, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class=>"btn btn-danger"

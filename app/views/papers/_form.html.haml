= form_for @paper do |f|
  - if @paper.errors.any?
    #error_explanation
      %h2= "#{pluralize(@paper.errors.count, "error")} prohibited this paper from being saved:"
      %ul
        - @paper.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :magazine
    = f.text_field :magazine
  .field
    = f.label :status
    = f.number_field :status
  .actions
    = f.submit 'Save'
